<?xml version="1.0" encoding="utf-8"?>
<key>
    <nodes>
        <!-- Primeira pergunta -->
        <node id="Q1">
            <question>O seu exemplar possui minerais ou fragmentos visíveis a olho nu?</question>
            <options>
                <option goto="Q2">
                    <text>Sim, possui minerais ou fragmentos visíveis</text>
                    <description>Com minerais ou fragmentos visíveis a olho nu</description>
                    <imageLocation>images/B1.jpg</imageLocation>
                </option>
                <option goto="Q3">
                    <text>Não, não possui minerais ou fragmentos visíveis</text>
                    <description>Sem minerais ou fragmentos visíveis a olho nu</description>
                    <imageLocation>images/A1.jpg</imageLocation>
                </option>
            </options>
        </node>

        <!-- Perguntas para "Sem minerais ou fragmentos visíveis" -->
        <node id="Q3">
            <question>O exemplar é total ou parcialmente vítreo?</question>
            <options>
                <option goto="R1">
                    <text>Sim, vítreo</text>
                    <description>Total ou parcialmente vítreo</description>
                    <imageLocation>images/vitreo.jpg</imageLocation>
                </option>
                <option goto="Q4">
                    <text>Não, não é vítreo</text>
                    <description>Não-vitroso; homogêneo e de grão tão fino que não se distinguem grãos individuais</description>
                    <imageLocation>images/nao_vitreo.jpg</imageLocation>
                </option>
            </options>
        </node>

        <node id="Q4">
            <question>O exemplar tem cheiro de barro quando bafejado?</question>
            <options>
                <option goto="R2">
                    <text>Sim, cheiro de barro</text>
                    <description>Cheiro de barro, várias cores, textura macia e friável</description>
                    <imageLocation>images/argila.jpg</imageLocation>
                </option>
                <option goto="R3">
                    <text>Não, mas reage ao HCl</text>
                    <description>Compacto, forte efervescência com HCl, cor clara ou preta</description>
                    <imageLocation>images/calcario.jpg</imageLocation>
                </option>
            </options>
        </node>

        <!-- Perguntas para "Com minerais ou fragmentos visíveis" -->
        <node id="Q2">
            <question>Os grãos do exemplar se individualizam a olho nu?</question>
            <options>
                <option goto="Q5">
                    <text>Sim, os grãos se individualizam</text>
                    <description>Grãos que se individualizam a olho nu</description>
                    <imageLocation>images/graos_individualizados.jpg</imageLocation>
                </option>
                <option goto="Q6">
                    <text>Não, possui composição fragmentária</text>
                    <description>Composição fragmentária</description>
                    <imageLocation>images/composicao_fragmentaria.jpg</imageLocation>
                </option>
            </options>
        </node>

        <node id="Q5">
            <question>O exemplar possui foliação?</question>
            <options>
                <option goto="R4">
                    <text>Não, sem foliação</text>
                    <description>Sem foliação</description>
                    <imageLocation>images/sem_foliacao.jpg</imageLocation>
                </option>
                <option goto="R5">
                    <text>Sim, com foliação</text>
                    <description>Distintamente foliado</description>
                    <imageLocation>images/com_foliacao.jpg</imageLocation>
                </option>
            </options>
        </node>

        <node id="Q6">
            <question>Os fragmentos são unidos por cimento?</question>
            <options>
                <option goto="R6">
                    <text>Não, textura desagregada</text>
                    <description>Textura desagregada, móvel, fragmentos não unidos por cimento</description>
                    <imageLocation>images/areia.jpg</imageLocation>
                </option>
                <option goto="R7">
                    <text>Sim, textura compacta</text>
                    <description>Textura compacta, fragmentos unidos por cimento</description>
                    <imageLocation>images/conglomerado.jpg</imageLocation>
                </option>
            </options>
        </node>
    </nodes>

    <results>
        <result id="R1">
            <ordem>Obsidiana</ordem>
            <description>Geralmente de cor escura, sólido e de brilho vítreo brilhante.</description>
            <imageLocation>resultImages/obsidiana.jpg</imageLocation>
        </result>
        <result id="R2">
            <ordem>Argila</ordem>
            <description>Cheiro de barro; esfregado entre os dedos é macio; friável.</description>
            <imageLocation>resultImages/argila.jpg</imageLocation>
        </result>
        <result id="R3">
            <ordem>Calcário</ordem>
            <description>Compacto; riscado pelo canivete; forte efervescência com HCl.</description>
            <imageLocation>resultImages/calcario.jpg</imageLocation>
        </result>
        <result id="R4">
            <ordem>Granito</ordem>
            <description>Maciço, composto por quartzo e feldspato; grãos de tamanhos semelhantes.</description>
            <imageLocation>resultImages/granito.jpg</imageLocation>
        </result>
        <result id="R5">
            <ordem>Gnaisse</ordem>
            <description>Textura granular, com grãos minerais orientados.</description>
            <imageLocation>resultImages/gnaisse.jpg</imageLocation>
        </result>
        <result id="R6">
            <ordem>Areia</ordem>
            <description>Textura desagregada, móvel, fragmentos inferiores a 2 mm.</description>
            <imageLocation>resultImages/areia.jpg</imageLocation>
        </result>
        <result id="R7">
            <ordem>Conglomerado</ordem>
            <description>Textura compacta, fragmentos maiores de 2 mm, unidos por cimento.</description>
            <imageLocation>resultImages/conglomerado.jpg</imageLocation>
        </result>
    </results>
</key>
